<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zhaoxuan.wehome" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:name=".WeHomeApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:launchMode="singleTask"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name=".view.activity.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.activity.LoginActivity"
            android:launchMode="singleTask" />
        <activity android:name=".view.activity.RegisterActivity" />
        <activity android:name=".view.activity.ForgetActivity" />
        <activity
            android:name=".view.activity.ChatActivity"
            android:launchMode="singleTask" />
        <activity android:name=".view.activity.JoinFamilyActivity" />
        <activity android:name=".view.activity.InviteActivity" />
        <activity android:name=".view.activity.SetActivity" />
        <activity android:name=".view.activity.WishActivity" />
        <activity android:name=".view.activity.WishDetailActivity" />
        <activity android:name=".view.activity.MemorialActivity" />
        <activity android:name=".view.activity.FamilyActivity" />
        <activity android:name=".view.activity.WZoneActivity" />
        <activity android:name=".view.activity.MemorialDetailActivity" />
        <activity android:name=".view.activity.WZoneDetailActivity" />
        <activity android:name=".view.activity.WZoneAddActivity" />
        <activity android:name=".view.activity.ChatAddActivity" >
        </activity>
    </application>

</manifest>